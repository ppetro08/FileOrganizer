<Window x:Class="FileOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
   <Window.Resources>
      <ResourceDictionary>
         <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="KeyboardNavigation.AcceptsReturn" Value="True" />
            <Style.Triggers>
               <DataTrigger Binding="{Binding Exists}"  Value="True">
                  <Setter Property="Foreground" Value="Red" />
               </DataTrigger>
            </Style.Triggers>
         </Style>
      </ResourceDictionary>
   </Window.Resources>
   <Grid>
      <TreeView x:Name="Videos" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" 
                ItemsSource="{Binding TheList}" ItemContainerStyle="{StaticResource TreeViewItemStyle}">
         <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
               <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}" Margin="5 5 0 0"/>
            </HierarchicalDataTemplate>
         </TreeView.ItemTemplate>
      </TreeView>
   </Grid>
</Window>
